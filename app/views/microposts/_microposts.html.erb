<!-- micropost共通 -->
<ul class="list-unstyled">
  <% microposts.each do |micropost| %>
    <li class="media mb-3">
      <img class="rounded mr-2" src="<%= gravatar_url(micropost.user, { size: 50 }) %>" alt="">
      <div class="media-body">
        <div>
          <%= link_to micropost.user.name, user_path(micropost.user) %> <sapn class="text-muted">posted at <%= micropost.created_at %></sapn>
        </div>
        <div>
          <%= micropost.content %>
        </div>
        <div>
          <% if current_user == micropost.user %>
            <%= link_to 'Delete', micropost, method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: 'You sure? '} %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
</ul>
<%= paginate microposts %>